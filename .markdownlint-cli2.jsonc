// markdownlint-cli2 configuration file
// Configuration format: https://github.com/DavidAnson/markdownlint-cli2#configuration
//
// This is the single source of truth for markdown linting configuration
// Both markdownlint-cli2 CLI and VS Code extension read this file
// VS Code extension precedence: .markdownlint-cli2.jsonc > .markdownlint.json > VS Code settings
{
  // Automatically respect .gitignore patterns
  "gitignore": true,

  // Files to ignore (glob patterns)
  "ignores": [
    // Temporary files (ephemeral, not committed)
    "**/temp/**",
    "**/tmp/**",
    "**/.tmp/**",

    // Scraped documentation (external sources, not under our control)
    "**/canonical/**",
    "**/plugins/google-ecosystem/skills/gemini-cli-docs/**",

    // SpecKit command files (generated templates with specific formatting requirements)
    "**/speckit.*.md",

    // SpecKit .specify folder contents (generated specification artifacts)
    "**/.specify/**",

    // Test fixtures (intentionally contain lint errors)
    "**/tests/**/fixtures/**",

    // Generated reports (auto-generated, not manually authored)
    "AUDIT-*.md"
  ],

  // Linting rules configuration
  "config": {
    "default": true,   // Enable all default markdownlint rules
    "MD013": false,    // Disable line-length rule (often too strict for documentation)
    "MD024": {
      // Allow duplicate headings when they appear under different parent headings
      // This supports documentation patterns like "Before/After" examples
      "siblings_only": true
    }
  }
}
