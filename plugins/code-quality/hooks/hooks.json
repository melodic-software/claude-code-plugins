{
  "description": "Code quality hooks: markdown linting with auto-fix on file write/edit operations",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/scripts/hooks/hook-wrapper.py\" /scripts/hooks/markdown-lint.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
