{
  "description": "Enterprise architecture compliance hooks (disabled by default)",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/scripts/hooks/hook-wrapper.py\" /hooks/architecture-compliance/check-principles.sh",
            "timeout": 30,
            "environment": {
              "ENABLED": "${CLAUDE_HOOK_ARCHITECTURE_COMPLIANCE_ENABLED:-false}"
            }
          }
        ]
      }
    ]
  }
}
