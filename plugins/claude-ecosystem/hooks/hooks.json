{
  "description": "Claude Code ecosystem hooks: date injection, capability index, file validation, and docs delegation suggestions",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/../../shared/hooks/hook-wrapper.py\" /hooks/prevent-backup-files/bash/prevent-backup-files.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/../../shared/hooks/hook-wrapper.py\" /scripts/hooks/suggest-docs-delegation.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/../../shared/hooks/hook-wrapper.py\" /hooks/inject-current-date/bash/inject-current-date.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/../../shared/hooks/hook-wrapper.py\" /hooks/inject-best-practices/bash/inject-best-practices.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/../../shared/hooks/hook-wrapper.py\" /hooks/inject-capability-index/bash/inject-capability-index.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
