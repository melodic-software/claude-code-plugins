{
  "description": "Detect Gemini CLI questions and inject gemini-cli-docs skill reminder",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/suggest-gemini-docs.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
