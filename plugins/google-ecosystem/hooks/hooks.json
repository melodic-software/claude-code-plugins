{
  "description": "Detect Gemini CLI questions and inject gemini-cli-docs skill reminder",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/../../shared/hooks/hook-wrapper.py\" /scripts/hooks/suggest-gemini-docs.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
