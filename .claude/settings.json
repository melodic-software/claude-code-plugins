{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "env": {
    "USE_BUILTIN_RIPGREP": "0",

    "CLAUDE_HOOK_DEBUG": "0",
    "CLAUDE_HOOK_LOG_LEVEL": "info",

    "CLAUDE_HOOK_MARKDOWN_LINT_ENABLED": "0",
    "CLAUDE_HOOK_PREVENT_BACKUP_FILES_ENABLED": "1",
    "CLAUDE_HOOK_REQUIRE_GPG_SIGNING_ENABLED": "0",
    "CLAUDE_HOOK_REQUIRE_EXPLICIT_COMMIT_ENABLED": "0",
    "CLAUDE_HOOK_BLOCK_ABSOLUTE_PATHS_ENABLED": "0",
    "CLAUDE_HOOK_INJECT_CURRENT_DATE_ENABLED": "1",
    "CLAUDE_HOOK_INJECT_BEST_PRACTICES_ENABLED": "1",
    "CLAUDE_HOOK_SECRET_SCAN_ENABLED": "0",
    "CLAUDE_HOOK_SUGGEST_DOCS_DELEGATION_ENABLED": "1",
    "CLAUDE_HOOK_SUGGEST_GEMINI_DOCS_ENABLED": "1",

    "CLAUDE_HOOK_LOG_EVENTS_ENABLED": "0",
    "CLAUDE_HOOK_LOG_PRETOOLUSE_ENABLED": "0",
    "CLAUDE_HOOK_LOG_POSTTOOLUSE_ENABLED": "0",
    "CLAUDE_HOOK_LOG_USERPROMPTSUBMIT_ENABLED": "0",
    "CLAUDE_HOOK_LOG_STOP_ENABLED": "0",
    "CLAUDE_HOOK_LOG_SUBAGENTSTOP_ENABLED": "0",
    "CLAUDE_HOOK_LOG_SESSIONSTART_ENABLED": "0",
    "CLAUDE_HOOK_LOG_SESSIONEND_ENABLED": "0",
    "CLAUDE_HOOK_LOG_PRECOMPACT_ENABLED": "0",
    "CLAUDE_HOOK_LOG_NOTIFICATION_ENABLED": "0",
    "CLAUDE_HOOK_LOG_PERMISSIONREQUEST_ENABLED": "0",

    "CLAUDE_HOOK_LOG_VERBOSITY": "summary",
    "CLAUDE_HOOK_LOG_ROTATION_ENABLED": "1",
    "CLAUDE_HOOK_LOG_ROTATION_MAX_SIZE_MB": "10",
    "CLAUDE_HOOK_LOG_RETENTION_MAX_AGE_DAYS": "30"
  },

  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Bash",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "mcp__context7",
      "mcp__firecrawl",
      "mcp__microsoft-learn",
      "mcp__perplexity",
      "mcp__ref",
      "Skill"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.envrc)",
      "Read(./secrets/**)",
      "Read(./build)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(./credentials.json)",
      "Read(./**/credentials.json)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "ask": []
  },

  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline --visual-burn-rate emoji --context-low-threshold 50 --context-medium-threshold 80 --cost-source auto --no-offline"
  }
}