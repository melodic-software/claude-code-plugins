{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "env": {
    "USE_BUILTIN_RIPGREP": "0"
  },

  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Bash",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "mcp__context7",
      "mcp__firecrawl",
      "mcp__microsoft-learn",
      "mcp__perplexity",
      "mcp__ref",
      "Skill"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.envrc)",
      "Read(./secrets/**)",
      "Read(./build)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gnupg/**)",
      "Read(./credentials.json)",
      "Read(./**/credentials.json)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "ask": []
  },

  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline --visual-burn-rate emoji --context-low-threshold 50 --context-medium-threshold 80 --cost-source auto --no-offline"
  }
}